<div class="container">
  <h1>New restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <div class="form-group">
      <%= f.input :name %>
    </div>

    <div class="form-group">
      <%= f.input :address %>
    </div>

    <div class="form-group">
      <%= f.input :phone_number %>
    </div>

    <div class="form-group">
      <%= f.input :category, collection: @category, prompt: "Select the category", selected: :first %>
    </div>

    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>
